<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            name="Context Quickie"
            class="contextquickie.preferences.ContextQuickie"
            id="contextquickie.preferences.ContextQuickie">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="contextquickie.preferences.PreferenceInitializer">
      </initializer>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="contextquickie.handlers.beyondcompare.Compare"
            id="ContextQuickie.commands.Compare"
            name="Compare">
      </command>
      <command
            defaultHandler="contextquickie.handlers.beyondcompare.SelectLeftSide"
            id="ContextQuickie.commands.selectLeftSide"
            name="SelectLeftSide">
      </command>
      <command
            defaultHandler="contextquickie.handlers.beyondcompare.CompareToRight"
            id="ContextQuickie.commands.compareToRight"
            name="CompareToRight">
      </command>
      <command
            defaultHandler="contextquickie.handlers.tortoisesvn.TortoiseSVNCommand"
            id="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
            name="TortoiseSVNCommand">
         <commandParameter
               id="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
               name="CommandID"
               optional="false">
         </commandParameter>
         <commandParameter
               id="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
               name="RequiresPath"
               optional="false">
         </commandParameter>
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
         <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any?after=group.open">
            <command
                  commandId="ContextQuickie.commands.Compare"
                  icon="icons/BeyondCompare/Compare.png"
                  label="Compare"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <and>
                        <count
                              value="2">
                        </count>
                        <test
                              property="contextquickie.propertyHandlers.BeyondCompareEnabled">
                        </test>
                        <test
                              property="contextquickie.propertyHandlers.CompareAllowed">
                        </test>
                     </and>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="ContextQuickie.commands.selectLeftSide"
                  icon="icons/BeyondCompare/SelectLeftFile.png"
                  label="Select Left File"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="true"
                           operator="or">
                        <or>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                           </adapt>
                        </or>
                     </iterate>
                     <count
                           value="1">
                     </count>
                     <and>
                        <test
                              property="contextquickie.propertyHandlers.BeyondCompareEnabled">
                        </test>
                     </and>
                  </with>
               </visibleWhen>
            </command>
            <command
                  commandId="ContextQuickie.commands.selectLeftSide"
                  icon="icons/BeyondCompare/SelectLeftFile.png"
                  label="Select Left Folder"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="true"
                           operator="or">
                        <or>
                           <adapt
                                 type="org.eclipse.core.resources.IFolder">
                           </adapt>
                           <adapt
                                 type="org.eclipse.core.resources.IProject">
                           </adapt>
                        </or>
                     </iterate>
                     <count
                           value="1">
                     </count>
                     <and>
                        <test
                              property="contextquickie.propertyHandlers.BeyondCompareEnabled">
                        </test>
                     </and>
                  </with>
               </visibleWhen>
            </command>
            <dynamic
                  class="contextquickie.handlers.beyondcompare.CompareToRightDynamic"
                  id="ContextQuickie.CompareToRightDynamic">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate
                           ifEmpty="true"
                           operator="or">
                        <or>
                           <adapt
                                 type="org.eclipse.core.resources.IFolder">
                           </adapt>
                           <adapt
                                 type="org.eclipse.core.resources.IProject">
                           </adapt>
                           <adapt
                                 type="org.eclipse.core.resources.IFile">
                           </adapt>
                        </or>
                     </iterate>
                     <count
                           value="1">
                     </count>
                     <and>
                        <test
                              property="contextquickie.propertyHandlers.BeyondCompareEnabled">
                        </test>
                     </and>
                  </with>
               </visibleWhen>
            </dynamic>
            <separator
                  name="SeparatorBeyondCompareTortoiseSVN"
                  visible="true">
            </separator>
            <command
                  commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                  icon="icons/TortoiseSVN/menuupdate.ico"
                  label="SVN Update"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <test
                           property="contextquickie.propertyHandlers.TortoiseSVNEnabled">
                     </test>
                  </and>
               </visibleWhen>
               <parameter
                     name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                     value="update">
               </parameter>
               <parameter
                     name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                     value="true">
               </parameter>
            </command>
            <command
                  commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                  icon="icons/TortoiseSVN/menucommit.ico"
                  label="SVN Commit..."
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <test
                           property="contextquickie.propertyHandlers.TortoiseSVNEnabled">
                     </test>
                  </and>
               </visibleWhen>
               <parameter
                     name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                     value="commit">
               </parameter>
               <parameter
                     name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                     value="true">
               </parameter>
            </command>
            <menu
                  icon="icons/TortoiseSVN/tsvnmenumultiple.ico"
                  label="Tortoise SVN">
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menulog.ico"
                     label="Show Log">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="log">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menurepobrowse.ico"
                     label="Repo-browser">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="repobrowser">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menushowchanged.ico"
                     label="Check for modifications">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="repostatus">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menurevisiongraph.ico"
                     label="Revision graph">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="revisiongraph">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <separator
                     name="SeparatorTortoiseSVN1"
                     visible="true">
               </separator>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuresolve.ico"
                     label="Resolve...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="resolve">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuupdate.ico"
                     label="Update to revision...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="commit">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menurevert.ico"
                     label="Revert...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="revert">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menucleanup.ico"
                     label="Clean up...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="cleanup">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menulock.ico"
                     label="Get lock...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="lock">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuunlock.ico"
                     label="Release lock...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="unlock">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <separator
                     name="SeparatorTortoiseSVN2"
                     visible="true">
               </separator>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menucopy.ico"
                     label="Branch/tag...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="copy">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuswitch.ico"
                     label="Switch...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="switch">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menumerge.ico"
                     label="Merge...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="merge">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuexport.ico"
                     label="Export...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="export">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <separator
                     name="SeparatorTortoiseSVN3"
                     visible="true">
               </separator>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuadd.ico"
                     label="Add...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="add">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/copy.ico"
                     label="Copy URL to clipboard">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="createpatch">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <separator
                     name="SeparatorTortoiseSVN4"
                     visible="true">
               </separator>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menudiff.ico"
                     label="Create patch...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="createpatch">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menupatch.ico"
                     label="Apply patch...">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuproperties.ico"
                     label="Properties">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="properties">
                  </parameter>
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.RequiresPath"
                        value="true">
                  </parameter>
               </command>
               <separator
                     name="SeparatorTortoiseSVN5"
                     visible="true">
               </separator>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menusettings.ico"
                     label="Settings">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="settings">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuhelp.ico"
                     label="Help">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="help">
                  </parameter>
               </command>
               <command
                     commandId="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand"
                     icon="icons/TortoiseSVN/menuabout.ico"
                     label="About">
                  <parameter
                        name="ContextQuickie.commands.TortoiseSVN.TortoiseSVNCommand.CommandID"
                        value="about">
                  </parameter>
               </command>
               <visibleWhen
                     checkEnabled="false">
                  <and>
                     <test
                           property="contextquickie.propertyHandlers.TortoiseSVNEnabled">
                     </test>
                  </and>
               </visibleWhen>
            </menu>
         </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="contextquickie.handlers.beyondcompare.CompareAllowed"
            id="contextquickie.propertyHandlers.CompareAllowed"
            namespace="contextquickie.propertyHandlers"
            properties="CompareAllowed"
            type="java.lang.Object">
      </propertyTester>
      <propertyTester
            class="contextquickie.handlers.beyondcompare.BeyondCompareEnabled"
            id="contextquickie.propertyHandlers.BeyondCompareEnabled"
            namespace="contextquickie.propertyHandlers"
            properties="BeyondCompareEnabled"
            type="java.lang.Object">
      </propertyTester>
      <propertyTester
            class="contextquickie.handlers.tortoisesvn.TortoiseSVNEnabled"
            id="contextquickie.propertyHandlers.TortoiseSVNEnabled"
            namespace="contextquickie.propertyHandlers"
            properties="TortoiseSVNEnabled"
            type="java.lang.Object">
      </propertyTester>
   </extension>
</plugin>
